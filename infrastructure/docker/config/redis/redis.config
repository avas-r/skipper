# Redis configuration for Skipper

# Basic configuration
port 6379
bind 0.0.0.0
protected-mode yes

# Performance tuning
maxclients 10000
timeout 0
tcp-keepalive 300

# Persistence configuration
save 900 1
save 300 10
save 60 10000
stop-writes-on-bgsave-error yes
rdbcompression yes
rdbchecksum yes
dbfilename dump.rdb
dir /data

# Memory management
maxmemory 256mb
maxmemory-policy volatile-lru
maxmemory-samples 5

# Logging
loglevel notice
logfile ""

# Security
requirepass ""  # No password for development

# Enable keyspace notifications for expiring keys
notify-keyspace-events Ex